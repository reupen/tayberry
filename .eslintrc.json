{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["karma.config.js"],
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ]
}
